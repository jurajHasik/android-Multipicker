<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.urza.multipicker.sample">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.urza.multipicker.sample.SampleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.urza.multipicker.FolderListActivityFragmented"
            android:label="@string/app_name" >

            <!-- define your own intent handling here
                specify mediatype - check MultiPicker class
                or even include previous selection as defined in
                FolderListActivityFragmented -->
        </activity>

    </application>

</manifest>
